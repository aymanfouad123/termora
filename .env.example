# AI Provider API Keys
GROQ_API_KEY=your-groq-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Model settings
AI_PROVIDER=groq  # Options: groq, openai, ollama
AI_MODEL=llama3-70b-8192  # For groq, defaults are: llama3-70b-8192, llama3-8b-8192
# AI_MODEL=gpt-4  # For OpenAI
# AI_MODEL=llama3:latest  # For ollama

# Ollama settings (for local model)
OLLAMA_HOST=http://localhost:11434

# Security settings
SEND_TO_API=True  # Set to False to avoid sending command output to API
AUTO_CONFIRM=False  # Set to True to skip confirmation for all commands
BACKUP_ENABLED=True  # Enable automatic backup of files before modification

# Logging settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_DIR=~/.termora/logs  # Directory for logs

# Advanced settings
MAX_TOKENS=500  # Maximum response tokens
TEMPERATURE=0.7  # Randomness of responses (0-1)
TERMINAL_THEME=dark  # light or dark 